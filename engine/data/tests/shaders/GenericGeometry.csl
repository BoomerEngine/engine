#include "common.h"

export shader GeometryPS
{
	in vec4 Color;

	void main()
	{
		gl_Target0 = Color;
	}
}

export shader GeometryVS
{
	vertex Simple3DVertex v;

	out vec4 Color;

	attribute(glflip)
	void main()
	{
		gl_Position = v.pos.xyz1;
		Color = v.color;
	}
}
