#include "AtomicTextureIncrement.csl"

//--

shader PreviewPS
{
	float DrawScale()
	{
		return 256.0f
	}
}

shader GeneratePS
{
	void runtAtomicOp()
	{
		atomicMin(TextureData[gl_FragCoord.xy/2], TriangleID);
	}
}


shader ClearCS
{
	attribute(local_size_x=8, local_size_y=8)
	void main()
	{
	    TextureData[gl_GlobalInvocationID.xy] = 256;
	} 
}


