#include "common.h"

export shader SimpleTrianglePS
{
	in vec4 Color;

	void main()
	{
		gl_Target0 = Color;
	}
}

export shader SimpleTriangleVS
{
	vertex Simple3DVertex v;
	in vec4 VertexColor;

	out vec4 Color;

	void main()
	{
		gl_Position = v.pos.xyz1;
		gl_PointSize = v.uv.x;
		Color = v.color;
	}
}
