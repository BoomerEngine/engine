#include "common.h"

descriptor TestParams
{
    attribute(dimCube) Texture TestTexture;
}

export shader SimpleDrawYTrianglePS
{
	in vec2 UV;

	void main()
	{
	    float phi = 2.0f * PI * UV.x;
	    float theta = PI * (0.5f + UV.y);

	    vec3 dir = vec3(cos(theta) * cos(phi), sin(theta), cos(theta) * sin(phi));

		gl_Target0 = texture(TestTexture, dir);
    }
}

export shader SimpleTriangleVS
{
	vertex Simple3DVertex v;

	out vec2 UV;

	void main()
	{
		gl_Position = v.pos.xyz1;
		UV = v.uv;
	}
}

