//--

descriptor TestParams
{
    attribute(format=rgba32f) Buffer VertexPositions;
    attribute(format=rgba32f) Buffer VertexColors;
}

//--

export shader SimpleTrianglePS
{
	in vec4 Color;

	void main()
	{
		gl_Target0 = Color;
	}
}

export shader SimpleTriangleVS
{
	out vec4 Color;

	void main()
	{
		gl_Position = VertexPositions[gl_VertexID].xyz1;
		Color = VertexColors[gl_VertexID/3].xyz1;
	}
}

//--