#include "common.h"

descriptor TestParams
{
    ConstantBuffer
    {
        vec2 TestOffset;
    }
}

export shader SimpleTrianglePS
{
	in vec4 Color;

	void main()
	{
		gl_Target0 = Color;
	}
}

export shader SimpleTriangleVS
{
	vertex Simple3DVertex v;

	out vec4 Color;

	void main()
	{
		gl_Position = v.pos.xyz1 + TestOffset.xy00;
		Color = v.color;
	}
}
